<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="Jpamodel" transaction-type="RESOURCE_LOCAL">

        <mapping-file>com/mao/model/UserEntity.xml</mapping-file>
        <mapping-file>com/mao/model/ImageEntity.xml</mapping-file>
        <mapping-file>com/mao/model/RecordEntity.xml</mapping-file>
        <mapping-file>com/mao/model/RelationshipEntity.xml</mapping-file>
        <mapping-file>com/mao/model/GroupEntity.xml</mapping-file>
        <mapping-file>com/mao/model/UserIconEntity.xml</mapping-file>
        <mapping-file>com/mao/model/UserInformEntity.xml</mapping-file>
        <mapping-file>com/mao/model/SearchRecordEntity.xml</mapping-file>
        <mapping-file>com/mao/model/UsersGroupEntity.xml</mapping-file>
        <mapping-file>com/mao/model/UserConversionEntity.xml</mapping-file>
        <mapping-file>com/mao/model/MessageTypeEntity.xml</mapping-file>
        <mapping-file>com/mao/model/UserMessageEntity.xml</mapping-file>

        <class>com.mao.model.UserEntity</class>
        <class>com.mao.model.ImageEntity</class>
        <class>com.mao.model.RecordEntity</class>
        <class>com.mao.model.RelationshipEntity</class>
        <class>com.mao.model.GroupEntity</class>
        <class>com.mao.model.UserIconEntity</class>
        <class>com.mao.model.UserInformEntity</class>
        <class>com.mao.model.SearchRecordEntity</class>
        <class>com.mao.model.UsersGroupEntity</class>
        <class>com.mao.model.UserConversionEntity</class>
        <class>com.mao.model.MessageTypeEntity</class>
        <class>com.mao.model.UserMessageEntity</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/Project"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/Project"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/Project"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/Project"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>